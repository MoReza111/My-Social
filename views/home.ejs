<head>
    <link rel="stylesheet" href="/css/home.css" />
</head>
<div class="header">
    <div class="header-logo">
        <a href="/">My-Social</a>
    </div>
    <form action="" method="post">
        <input class="search-input" type="text" placeholder="Search" />
        <button type="submit"><i class="fas fa-search"></i></button>
    </form>
    <nav>
        <ul>
            <li><a href="/"><i class="fas fa-home"></i></a></li>
            <li><a href="#"><i class="far fa-heart"></i></a></li>
            <li><a href="/users/profile"><img src="/images/<%= user.profile_image %>" alt="profile-pic" class="nav-img" /></a></li>
        </ul>
    </nav>
</div>
<div class="container">
    <div class="main">
        <% if(posts){ %>
        <div class="posts">
            <% posts.forEach(post=>{  %>
            <div class="post">
                <div class="post-header">
                    <img src="/images/<%= post.profile_image %>" alt="user-profile" />
                    <a href="#"><%= post.user_name %></a>
                </div>
                <div class="post-content">
                    <br>
                    <% if(post.media_name){ %>
                        <img class="post-img" src="/images/posts/<%= post.media_name %>" >
                    <% } %>    
                    <p><%= post.content %></p>
                    <br>
                    <br>
                    <p>posted <%= getTime(post.created_at) %> ago</p>
                    <br>
                </div>
                <div class="post-footer">
                    <a href="#"><i class="far fa-heart"></i></a>
                    <form action="" method="POST">
                        <input class="comment-input" type="text" />
                        <button type="submit"><i class="fa fa-paper-plane" aria-hidden="true"></i></button>
                    </form>
                </div>
            </div>
            <% }) %>
        </div>
        <% }else{ %>
            <div style="color:#fff;"><p>NO FOLLOWING</p></div>
        <% } %>    
        <div class="suggetions">
            <div class="suggetion">
                <ul>
                    <li>
                        <form action="" method="post">
                            <a href="#">username</a><input type="submit" class="btn btn-primary" value="Follow"></input>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="footer">
    <div class="footer-link">
        <div>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="#">Contact Us</a></li>
                <li><a href="#">Activity</a></li>
            </ul>
        </div>
        <div>
            <ul>
                <li><a href="/">Api</a></li>
                <li><a href="/">Github</a></li>
            </ul>
        </div>
    </div>
    <div class="footer-text">
        <p>All rights reserved by <a href="">@MoReza111</a></p>
    </div>
</div>
<button id="open" class="open-modal">
    <i class="fas fa-plus"></i>
</button>
<div class="modal-container" id="modal-container">
    <div class="modal">
        <div class="modal-header">
            <h1>Add your tweet</h1>
            <button id="close" class="close">X</button>
        </div>
        <div class="modal-content">
            <form action="" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <textarea class="inputs"></textarea>
                </div>
                <div class="form-group">
                    <input type="file" name="file" id="file" class="inputfile" />
                    <label for="file"><i class="fas fa-upload"></i> Choose a file</label>
                </div>    
                <input type="submit" value="submit" class="btn btn-secondary">
            </form>
        </div>
        <div class="modal-footer">

        </div>
    </div>
</div>

<script src="/js/index.js"></script>